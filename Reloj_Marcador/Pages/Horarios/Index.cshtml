@page
@model Reloj_Marcador.Pages.Horarios.IndexModel
@{
    ViewData["Title"] = "Gestión de Horarios";
}

<div class="container">
    <h2 class="mt-4">Gestión de Horarios del Funcionario: @Model.FuncionarioSeleccionado</h2>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn btn-primary" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn btn-primary" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-warning">
            <strong>Errores en el formulario:</strong>
            <ul class="mb-0">
                @foreach (var kvp in ModelState.Where(kvp => kvp.Value.Errors.Any()))
                {
                    foreach (var error in kvp.Value.Errors)
                    {
                        <li><strong>@kvp.Key:</strong> @error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <hr />


    <h3>Horarios Asignados</h3>
    @if (!Model.Horarios.Any())
    {
        <div class="alert alert-info">No hay horarios asignados. Cree uno nuevo abajo.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Área</th>
                        <th>Descripción</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var horario in Model.Horarios)
                    {
                        <tr>
                            <td>@horario.ID_Horario</td>
                            <td>@(Model.AreasDisponibles.FirstOrDefault(a => a.ID_Area == horario.ID_Area)?.Nombre_Area ?? horario.ID_Area)</td>
                            <td>@horario.Descripcion</td>
                            <td>@(horario.Fecha_Creacion.ToString("dd/MM/yyyy HH:mm"))</td>
                            <td>

                                <a href="@Url.Page("./Index", new { idHorario = horario.ID_Horario })" class="btn btn-primary">Ver Detalles</a>


                                <form method="post" asp-page-handler="Delete" asp-route-id="@horario.ID_Horario"
                                      class="delete-form" style="display: inline-block;">
                                    <input type="hidden" name="FuncionarioSeleccionado" value="@Model.FuncionarioSeleccionado" />
                                    <button type="button" class="btn btn-primary btn-open-modal"
                                            data-bs-toggle="modal"
                                            data-bs-target="#confirmModal"
                                            data-form-id="@horario.ID_Horario"
                                            data-message="¿Eliminar el horario y sus detalles?">
                                        Eliminar
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <hr />


    <h3>Agregar Nuevo Horario</h3>
    <form method="post" asp-page-handler="Create">
        <input type="hidden" name="FuncionarioSeleccionado" value="@Model.FuncionarioSeleccionado" />
        <input type="hidden" asp-for="NuevoHorario.ID_Funcionario" value="@Model.FuncionarioSeleccionado" />
        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <select asp-for="NuevoHorario.ID_Area" class="form-select" required>
                    <option value="">Seleccione un área</option>
                    @if (Model.AreasDisponibles != null)
                    {
                        @foreach (var area in Model.AreasDisponibles)
                        {
                            <option value="@area.ID_Area">@area.Nombre_Area</option>
                        }
                    }
                </select>
                <div asp-validation-for="NuevoHorario.ID_Area" class="form-text"></div>
            </div>
            <div class="col-md-6">
                <input asp-for="NuevoHorario.Descripcion" type="text" class="form-control" required maxlength="255" placeholder="Descripción" />
                <div asp-validation-for="NuevoHorario.Descripcion" class="form-text"></div>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Guardar</button>
            </div>
        </div>
    </form>

    <hr />

  
    @if (Model.HorarioSeleccionado != null && Model.HorarioSeleccionado.ID_Horario > 0)
    {
        <h3>Detalles del Horario Seleccionado: ID @Model.HorarioSeleccionado.ID_Horario - @Model.HorarioSeleccionado.Descripcion</h3>

     
        <h4>Agregar Detalle al Horario</h4>
        <form method="post" asp-page-handler="AgregarDetalle" asp-route-idHorario="@Model.HorarioSeleccionado.ID_Horario">
 
            <input type="hidden" name="FuncionarioSeleccionado" value="@Model.FuncionarioSeleccionado" />

    
            <input type="hidden" asp-for="NuevoHorario.ID_Funcionario" value="@Model.HorarioSeleccionado.ID_Funcionario" />
            <input type="hidden" asp-for="NuevoHorario.ID_Area" value="@Model.HorarioSeleccionado.ID_Area" />
            <input type="hidden" asp-for="NuevoHorario.Descripcion" value="@Model.HorarioSeleccionado.Descripcion" />

            <div class="row g-3 mb-3">
                <div class="col-md-2">
                    <select name="Dia" class="form-select" required>
                        <option value="">Seleccione día</option>
                        <option value="Lunes">Lunes</option>
                        <option value="Martes">Martes</option>
                        <option value="Miércoles">Miércoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sábado">Sábado</option>
                        <option value="Domingo">Domingo</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" name="Hora_Ingreso" class="form-control" min="0" max="23" required placeholder="Hora Ingreso" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="Minuto_Ingreso" class="form-control" min="0" max="59" required placeholder="Minuto Ingreso" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="Hora_Salida" class="form-control" min="0" max="23" required placeholder="Hora Salida" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="Minuto_Salida" class="form-control" min="0" max="59" required placeholder="Minuto Salida" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </form>


        <h4>Detalles Actuales</h4>
        @if (!Model.Detalles.Any())
        {
            <div class="alert alert-info">No hay detalles para este horario. Agregue uno arriba.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID Detalle</th>
                            <th>Día</th>
                            <th>Hora Ingreso</th>
                            <th>Hora Salida</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.Detalles)
                        {
                            <tr>
                                <td>@detalle.Id_Detalle</td>
                                <td>@detalle.Dia</td>
                                <td>@($"{detalle.Hora_Ingreso:D2}:{detalle.Minuto_Ingreso:D2}")</td>
                                <td>@($"{detalle.Hora_Salida:D2}:{detalle.Minuto_Salida:D2}")</td>
                                <td>
                                    <form method="post" asp-page-handler="EliminarDetalle"
                                          asp-route-id="@detalle.Id_Detalle"
                                          asp-route-idHorario="@Model.HorarioSeleccionado.ID_Horario"
                                          class="delete-form" style="display: inline-block;">
                                        <input type="hidden" name="FuncionarioSeleccionado" value="@Model.FuncionarioSeleccionado" />
                                        <button type="button" class="btn btn-primary btn-open-modal"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmModal"
                                                data-form-id="@detalle.Id_Detalle"
                                                data-message="¿Eliminar este detalle?">
                                            Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

  
        <div class="mt-3">
            <a href="@Url.Page("./Index")" class="btn btn-secondary">Volver</a>
        </div>
    }
    else
    {
       
        @if (Model.Horarios.Any())
        {
            <div class="alert alert-info">
                <h4>Seleccione un Horario</h4>
                <p>Haga clic en "Ver Detalles" en la tabla de arriba para ver y agregar detalles a un horario específico.</p>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <h4>No hay horarios disponibles</h4>
                <p>Cree un horario primero para ver y agregar detalles.</p>
            </div>
        }
    }
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="confirmModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">¿Estás seguro de eliminar este elemento?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnConfirmDelete">Sí, eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let formToSubmit = null;

        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('confirmModal');
            const confirmMessage = document.getElementById('confirmMessage');
            const btnConfirmDelete = document.getElementById('btnConfirmDelete');

          
            document.querySelectorAll('.btn-open-modal').forEach(button => {
                button.addEventListener('click', function () {
                    const form = this.closest('form');
                    formToSubmit = form; 
                    const message = this.getAttribute('data-message');
                    confirmMessage.textContent = message;
                });
            });

            
            btnConfirmDelete.addEventListener('click', function () {
                if (formToSubmit) {
                    formToSubmit.submit();
                    formToSubmit = null;
                    const modalInstance = bootstrap.Modal.getInstance(modal);
                    modalInstance.hide();
                }
            });
        });
    </script>
}
