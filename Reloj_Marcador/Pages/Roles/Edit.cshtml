@page "{id}"
@model Reloj_Marcador.Pages.Roles.EditModel
@{
    ViewData["Title"] = "Editar Rol";
    Layout = "_Layout";
}

<h1>Actualizar Rol</h1>

<form method="post">
    <div class="form-group">
        <label>ID Rol</label>
        <input asp-for="Rol.ID_Rol" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Nombre Rol</label>
        <input asp-for="Rol.Nombre_Rol" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</form>

<div class="modal fade" id="systemMessageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">@TempData.Peek("CreateTitle6")</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData.Peek("CreateMessage6")
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var modalMessage = "@(TempData["CreateMessage6"] ?? "")";
            if (modalMessage.length > 0) {
        $("#systemMessageModal").modal("show");
            }
        });
    </script>
}

