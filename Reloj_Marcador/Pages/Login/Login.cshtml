@page
@model Reloj_Marcador.Pages.Login.LoginModel
@{
    Layout = null;
}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <!-- SB Admin 2 CSS (Bootstrap) -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.4/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Font Awesome Iconos -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- CSS par Bugs de la Plantilla-->

    <link href="~/css/login.css" rel="stylesheet" />



<body class="bg-gradient-primary">

    <div class="container">

        <!-- Fila externa que centra el contenido -->

        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <!-- Card principal del login -->

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        
                        <div class="row">

                            <!-- Sección Izquierda con Logo -->

                            <div class="col-lg-6 d-none d-lg-block" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <div class="text-center text-white p-5">
                                        <img src="~/imagenes/Logo.png" alt="Logo" class="logo-icon mb-4" />
                                        <p class="lead">Sistema de Control de Asistencia</p>
                                        <hr class="bg-white" style="opacity: 0.3;">
                                        <p class="small">Gestión profesional de horarios y marcas</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Sección Derecha con Formulario -->

                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">¡Bienvenido!</h1>
                                    </div>

                                    <!-- Mensaje dinámico -->
                                    @if (!string.IsNullOrEmpty(Model.Mensaje))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="fas fa-exclamation-circle"></i> @Model.Mensaje
                                            <button type="button" class="close" data-dismiss="alert">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }
                                    
                                   

                                    <!-- Formulario de inicio de sesión -->

                                    <form method="post" class="user">
                                        <div class="form-group">
                                            <input type="text" id="usuario" name="Usuario" class="form-control form-control-user" placeholder="Usuario (Identificación)" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" id="contrasena" name="Contrasena" class="form-control form-control-user" placeholder="Contraseña" />
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            <i class="fas fa-sign-in-alt"></i> Aceptar
                                        </button>
                                    </form>

                                    
                                    
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- JavaScript principal de Bootstrap -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin de animaciones para jQuery -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

    <!-- SB Admin 2 JS -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.4/js/sb-admin-2.min.js"></script>



</body>

