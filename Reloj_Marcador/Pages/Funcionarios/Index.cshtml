@page
@model Reloj_Marcador.Pages.Funcionarios.IndexModel
@{
    ViewData["Title"] = "Funcionarios";
}

<h1>Funcionarios</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Nuevo Funcionario</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Identificación</th>
            <th>Tipo Identificación</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Funcionarios)
        {
            <tr>
                <td>@item.Identificacion</td>
                <td>@item.TipoIdentificacion</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Correo</td>
                <td>@item.ID_Rol</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Identificacion">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@item.Identificacion">Eliminar</a> |
                    <a asp-page="Details" asp-route-id="@item.Identificacion">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
