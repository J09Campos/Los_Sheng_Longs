@page
@model Reloj_Marcador.Pages.Funcionarios.IndexModel
@{
    ViewData["Title"] = "Funcionarios";
    Layout = "_Layout";
}

<h1>Administración de Funcionarios y Usuarios</h1>

<div class="mb-3 d-flex justify-content-start align-items-center">
    <a class="btn btn-primary mr-2" asp-page="Create">
        <i class="mr-1"></i> Nuevo
    </a>

    <button id="btnCambioClave" class="btn btn-primary mr-2" disabled>
        <i class="mr-1"></i> Cambio de clave
    </button>

    <button id="btnAdminAreas" class="btn btn-primary mr-2" disabled>
        <i class="mr-1"></i> Administración de áreas
    </button>

    <button id="btnAdminHorarios" class="btn btn-primary mr-2" disabled>
        <i class="mr-1"></i> Administración de horarios
    </button>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover" style="width: 100%;">
        <thead style="background-color: #36404a; color: white;">
            <tr>
                <th>Identificación</th>
                <th>Tipo Identificación</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Estado</th>
                <th class="text-center" style="width: 12%;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Funcionarios)
            {
                <tr data-id="@item.Identificacion">
                    <td>@item.Identificacion</td>
                    <td>@item.TipoIdentificacion</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Correo</td>
                    <td>@item.ID_Rol</td>
                    <td>@item.Estado</td>
                    <td class="text-center">
                        <a asp-page="Edit" asp-route-id="@item.Identificacion"
                           class="btn btn-primary btn-circle btn-sm" title="Actualizar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button type="button"
                                class="btn btn-danger btn-circle btn-sm"
                                data-toggle="modal"
                                data-target="#deleteModal"
                                data-id="@item.Identificacion"
                                data-nombre="@item.Nombre"
                                title="Eliminar">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)">Anterior</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)">Siguiente</a>
        </li>
    </ul>
</nav>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-left-primary shadow">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title font-weight-bold" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle mr-2"></i> Confirmar eliminación
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body text-gray-800">
                ¿Realmente desea eliminar al funcionario <strong id="nombreFuncionario"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times mr-1"></i> No
                </button>
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" name="Identificacion" id="idFuncionario" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt mr-1"></i> Sí
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="systemMessageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">@TempData.Peek("CreateTitle1")</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData.Peek("CreateMessage1")
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var nombre = button.data('nombre');

            var modal = $(this);
            modal.find('#idFuncionario').val(id);
            modal.find('#nombreFuncionario').text(nombre);
        });

        $(document).ready(function () {
            var modalMessage = "@(TempData["CreateMessage1"] ?? "")";
            if (modalMessage.length > 0) {
                $("#systemMessageModal").modal("show");
            }
        });

        let selectedFuncionarioId = null;

        $('tbody tr').click(function () {
            $('tbody tr').removeClass('table-primary');
            $(this).addClass('table-primary');
            selectedFuncionarioId = $(this).data('id');

            $('#btnCambioClave').prop('disabled', false);
            $('#btnAdminAreas').prop('disabled', false);
            $('#btnAdminHorarios').prop('disabled', false);
        });

        $('#btnCambioClave').click(function () {
            if (selectedFuncionarioId) {
                window.location.href = '@Url.Page("Cambio_Contrasena")?id=' + selectedFuncionarioId;
            }
        });

        $('#btnAdminAreas').click(function () {
            if (selectedFuncionarioId) {
                window.location.href = '@Url.Page("Funcionario_Areas")?identificacion=' + selectedFuncionarioId;
            }
        });

        $('#btnAdminHorarios').click(function () {
            if (selectedFuncionarioId) {
                window.location.href = '@Url.Page("/Horarios/Index")?FuncionarioSeleccionado=' + selectedFuncionarioId;
            }
        });
    </script>
}


