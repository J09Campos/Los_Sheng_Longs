@page
@model Reloj_Marcador.Pages.Funcionarios.Asociar_Area_FuncionarioModel
@{
    ViewData["Title"] = "Asignar Área a Funcionario";
    Layout = "_Layout";
}

<h1 class="mb-4">Asignar Área a Funcionario</h1>

<form method="post">
    <div class="form-group mb-3">
        <label for="Identificacion" class="form-label">Identificación del Funcionario</label>
        <input asp-for="FuncionarioArea.Identificacion" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label for="ID_Area" class="form-label">Área</label>
        <select asp-for="FuncionarioArea.ID_Area" asp-items="Model.ListaAreas" class="form-control">
            <option value="">Seleccione...</option>
        </select>
        <span asp-validation-for="FuncionarioArea.ID_Area" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Guardar
        </button>
        <a asp-page="Funcionario_Areas"
           asp-route-identificacion="@Model.FuncionarioArea.Identificacion"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</form>

<div class="modal fade" id="systemMessageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">@TempData.Peek("CreateTitle")</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData.Peek("CreateMessage")
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas.js"></script>
    <script src="~/js/paginacion.js"></script>
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var nombre = button.data('nombre');

            var modal = $(this);
            modal.find('#idArea').val(id);
            modal.find('#nombreArea').text(nombre);
        });

        $(document).ready(function () {
            var modalMessage = "@(TempData["CreateMessage"] ?? "")";
            if (modalMessage.length > 0) {
                $("#systemMessageModal").modal("show");
            }
        });
    </script>
}
